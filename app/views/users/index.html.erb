<main>
  <% @users.each do |user| %>
    <section class="users-container">
      <div class="user-img-container">
        <img src="<%= user.photo %>" class="user-img" atr="user photo">
      </div>
      <div class="user-info">
        <h2 class="user-name">
        <%= link_to user.name, user_path(user) %>
        </h2>
        <p class="posts-counter">
          Number of posts: <%= user.posts_counter %>
        </p>
      </div>
    </section>
  <% end %>
</main>